<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginBottom="50dp"
    android:orientation="vertical"
    android:outlineAmbientShadowColor="#FFFFFF"
    app:layout_anchorGravity="center"
    tools:context=".view.BeverMakingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_weight="4"
        android:gravity="right">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:id="@+id/recipe"
                android:layout_width="180dp"
                android:layout_height="75dp"
                android:fontFamily="@font/cookie_run_regular"

                android:layout_gravity="center|left"
                android:layout_marginTop="2dp"
                android:backgroundTint="#0061A8"
                android:text="추천 레시피"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1393dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:fontFamily="@font/cookie_run_regular"

                android:gravity="center"
                android:text="도움말"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/question2"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/back2"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:fontFamily="@font/cookie_run_regular"

                android:layout_gravity="center"
                android:backgroundTint="#0061A8"
                android:text="BACK"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/first_bever"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/cookie_run_regular"
                    android:text="1번음료"
                    android:textSize="40sp" />

                <SeekBar
                    android:id="@+id/bar1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="20"
                    android:min="0"
                    android:progress="0"
                    android:progressDrawable="@drawable/bar1"
                    android:splitTrack="false"
                    android:thumb="@drawable/seekbar1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/second_bever"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/cookie_run_regular"
                    android:text="2번음료"
                    android:textSize="40sp" />

                <SeekBar
                    android:id="@+id/bar2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="20"
                    android:min="0"
                    android:progress="0"
                    android:progressDrawable="@drawable/bar1"
                    android:splitTrack="false"
                    android:thumb="@drawable/seekbar1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/third_bever"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/cookie_run_regular"
                    android:text="3번음료"
                    android:textSize="40sp" />

                <SeekBar
                    android:id="@+id/bar3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="20"
                    android:min="0"
                    android:progress="0"
                    android:progressDrawable="@drawable/bar1"
                    android:splitTrack="false"
                    android:thumb="@drawable/seekbar1" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/st1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/cookie_run_regular"
                    android:gravity="center"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/st2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/cookie_run_regular"

                    android:gravity="center"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/st3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/cookie_run_regular"

                    android:gravity="center"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/roul"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="100dp"
                        android:fontFamily="@font/cookie_run_regular"
                        android:gravity="center"
                        android:text="완료"
                        android:textSize="30sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="100dp"
                        android:fontFamily="@font/cookie_run_regular"
                        android:gravity="center"
                        android:text="핵폭탄모드"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="96dp"
                        android:fontFamily="@font/cookie_run_regular"

                        android:text="maximum = 10"
                        android:textSize="30dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

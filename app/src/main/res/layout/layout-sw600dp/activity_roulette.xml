<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.RouletteActivity"
    >

    <ImageView
        android:id="@+id/imageview1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/roulletgame"
        />




    <com.bluehomestudio.luckywheel.LuckyWheel
        android:id="@+id/luck_wheel"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        app:background_color="@android:color/white" />

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/spin_btn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="#0061A8"
            android:text="시작"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/restart_btn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="#0061A8"
            android:text="인원 재설정"
            android:textColor="@android:color/white"
            android:textSize="19sp" />

    </LinearLayout>

    <Button
        android:id="@+id/back_btn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:text="뒤로가기"
        android:backgroundTint="#0061A8"
        android:textSize="20sp"
        android:textColor="#FFFFFF" />

</RelativeLayout>

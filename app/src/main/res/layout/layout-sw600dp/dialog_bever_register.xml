<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/radius"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:fontFamily="@font/cookie_run_bold"
        android:text="음료 등록"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/cola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:text="콜라"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_background"
        android:fontFamily="@font/cookie_run_regular"

        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cider"
        />

    <TextView
        android:id="@+id/cider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:text="사이다"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_background"
        android:fontFamily="@font/cookie_run_regular"

        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toEndOf="@id/cola"
        app:layout_constraintEnd_toStartOf="@id/sonic_water"
        />

    <TextView
        android:id="@+id/sonic_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:text="소닉워터"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_background"
        android:fontFamily="@font/cookie_run_regular"

        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toEndOf="@id/cider"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/button_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"

        android:gravity="center"
        android:text="취소"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_background"
        android:fontFamily="@font/cookie_run_regular"

        app:layout_constraintTop_toBottomOf="@id/cola"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#333333"
    android:orientation="vertical">

    <!--  레시피 다이얼로그  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal"
            android:fontFamily="@font/jamsil2"
            android:gravity="center"
            android:text="추천 레시피"
            android:textColor="#00C6CF"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:fontFamily="@font/jamsil"
                android:gravity="center"
                android:text="사이다 + 박카스"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <android.widget.Button
                android:id="@+id/button9"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/okbutton"
                android:textColor="#FFFFFF"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:fontFamily="@font/jamsil"
                android:gravity="center"
                android:text="사이다 + 파워에이드"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <android.widget.Button
                android:id="@+id/button10"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/okbutton"
                android:backgroundTint="#00C6CF"
                android:fontFamily="@font/jamsil"
                android:textColor="#FFFFFF"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/jamsil"
                android:gravity="center"
                android:text="박카스+파워에이드"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <android.widget.Button
                android:id="@+id/button11"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/okbutton"
                android:backgroundTint="#00C6CF"
                android:fontFamily="@font/jamsil"
                android:textColor="#FFFFFF"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/jamsil"
                android:gravity="center"
                android:text="사이다+박카스+파워에이드"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <android.widget.Button
                android:id="@+id/button12"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/okbutton"
                android:textColor="#FFFFFF"
                tools:ignore="SpeakableTextPresentCheck"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <android.widget.Button
                android:id="@+id/button13"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:background="@drawable/close"
                android:textColor="#FFFFFF"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>